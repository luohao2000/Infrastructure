#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- spring 环境读取 -->
    <springProperty scope="context" name="kafkaBroker" source="log.appender.kafka.host"/>
    <springProperty scope="context" name="scenario" source="log.appender.scenario"/>
    <springProperty scope="context" name="serviceName" source="spring.application.name"/>

    <conversionRule conversionWord="ip" converterClass="${package}.log.config.CustomLogConfig"/>
    <property name="CONSOLE_LOG_PATTERN"
              value="TIME %d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} %contextName [%thread] IP [%ip]  -%5p [%X{X-B3-TraceId:-}] %-40.40logger{39} %L %m %n -%wEx"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${symbol_dollar}{CONSOLE_LOG_PATTERN}</pattern>
            <immediateFlush>false</immediateFlush>
        </encoder>
    </appender>
    <appender name="ES_LOGGER" class="${package}.log.appender.ElasticSearchLogBackAppender">
        <scenario>${symbol_dollar}{scenario}</scenario>
        <appName>${symbol_dollar}{serviceName}</appName>
        <broker>${symbol_dollar}{kafkaBroker}</broker>
    </appender>
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <!--<appender-ref ref="ES_LOGGER"/>-->
    </root>
</configuration>
